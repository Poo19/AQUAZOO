<% include ./partials/header %> 
<style>
.container.main {
   margin-top:  7.0em; 
}
</style>


<div class = "ui main text container segnment" > 

     <div class = "ui huge header"> UPDATE THE PERSONAL INFO OF <p> <%= Trainer.Lname%> </p>  </div>
     
     <form class = "ui form" action = "/trainer/<%= Trainer._id %>?_method=PUT" method = "POST">
     
     
   <div class = "field">
         <label> LNAME </label>
        <input type = "text" name = "Trainer[Lname]" placeholder = "<%= Trainer.Lname %>" required>  
   </div> 
    <div class = "field">
         <label> FNAME </label>
        <input type = "text" name = "Trainer[Fname]" placeholder = "<%= Trainer.Fname %>" required>  
   </div> 
   <div class = "field">
         <label> IMAGE </label>
        <input type = "text" name = "Trainer[image]" placeholder = "<%= Trainer.image %>" required>  
   </div>
   <div class = "field">
         <label> SALARY </label>
        <input type = "text" name = "Trainer[salary]" placeholder = "<%= Trainer.salary %>" required>  
   </div>
   
   <div class = "field">
         <label> ANIMAL TRAINED </label>
        <input type = "text" name = "Trainer[AID]= <%= Trainer.AID %>" placeholder = "<%= Trainer.AID %>" disabled>  
   </div>
   
   
      <div class = "field">
        <input class = "ui basic violet button" type = "submit">  
      </div>
      
    </form>
</div>

<% include ./partials/footer %> 